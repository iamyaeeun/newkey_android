<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_600">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="28dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp">
                <ImageView
                    android:id="@+id/news3_back"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/back"
                    android:layout_gravity="left" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_100"
                    android:text="신문사"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/pretendardmedium"
                    android:textSize="16dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/news3_scrap"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/bookmark_unchecked"
                    android:gravity="right" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="기사 제목"
            android:fontFamily="@font/pretendardmedium"
            android:textSize="20dp"
            android:textColor="@color/gray_100"
            android:maxLines="2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="27dp">
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/gray_300"
                android:text="날짜"
                android:fontFamily="@font/pretendardregular"
                android:textSize="14dp"
                android:maxLines="1"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/reporter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_300"
                android:text="기자 이름"
                android:layout_gravity="right"
                android:fontFamily="@font/pretendardregular"
                android:textSize="14dp"
                android:maxLines="1"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="202dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            app:cardCornerRadius="12dp">
            <ImageView
                android:id="@+id/newsImg"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:scaleType="centerCrop"
                android:src="@drawable/newkey_black"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <FrameLayout
                android:id="@+id/new3_summary"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/news3_radius2">
                <TextView
                    android:id="@+id/news3_summary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기사 요약"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:fontFamily="@font/pretendardmedium"
                    android:layout_marginLeft="24dp"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/news3_summary_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/news3_up"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="24dp"/>
            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/summary_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/gray_600"
                android:visibility="gone">
                <TableLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TableRow>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/polygon_when"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/polygon"
                                    android:layout_gravity="center">
                                </ImageView>
                                <TextView
                                    android:id="@+id/text_when"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="언제"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/pretendardregular"
                                    android:textColor="@color/gray_100"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="4dp">
                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/cardnews_background"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="7dp">
                                <TextView
                                    android:id="@+id/when"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2023년 12월 31일"
                                    android:textSize="12dp"
                                    android:textColor="@color/gray_100"
                                    android:fontFamily="@font/pretendardregular"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginRight="12dp">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/polygon_who"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/polygon"
                                    android:layout_gravity="center">
                                </ImageView>
                                <TextView
                                    android:id="@+id/text_who"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="누가"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/pretendardregular"
                                    android:textColor="@color/gray_100"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="4dp">
                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/cardnews_background"
                                android:layout_marginTop="10dp">
                                <TextView
                                    android:id="@+id/who"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="의료진"
                                    android:textSize="12dp"
                                    android:textColor="@color/gray_100"
                                    android:fontFamily="@font/pretendardregular"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginRight="12dp">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="16dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/polygon_where"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/polygon"
                                    android:layout_gravity="center">
                                </ImageView>
                                <TextView
                                    android:id="@+id/text_where"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="어디서"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/pretendardregular"
                                    android:textColor="@color/gray_100"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="4dp">
                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/cardnews_background"
                                android:layout_marginTop="10dp">
                                <TextView
                                    android:id="@+id/where"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="서울 광진구 보건소 선별진료소"
                                    android:textSize="12dp"
                                    android:textColor="@color/gray_100"
                                    android:fontFamily="@font/pretendardregular"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginRight="12dp">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="16dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/polygon_what"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/polygon"
                                    android:layout_gravity="center">
                                </ImageView>
                                <TextView
                                    android:id="@+id/text_what"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="무엇을"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/pretendardregular"
                                    android:textColor="@color/gray_100"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="4dp">
                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/cardnews_background"
                                android:layout_marginTop="10dp">
                                <TextView
                                    android:id="@+id/what"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="코로나 검체 채취"
                                    android:textSize="12dp"
                                    android:textColor="@color/gray_100"
                                    android:fontFamily="@font/pretendardregular"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginRight="12dp">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="16dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/polygon_how"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/polygon"
                                    android:layout_gravity="center">
                                </ImageView>
                                <TextView
                                    android:id="@+id/text_how"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="어떻게"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/pretendardregular"
                                    android:textColor="@color/gray_100"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="4dp">
                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/cardnews_background"
                                android:layout_marginTop="10dp">
                                <TextView
                                    android:id="@+id/how"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="전국 선별진료소 506곳이 문을 어쩌구 어쩌구"
                                    android:textSize="12dp"
                                    android:textColor="@color/gray_100"
                                    android:fontFamily="@font/pretendardregular"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginRight="12dp">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="16dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/polygon_why"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/polygon"
                                    android:layout_gravity="center">
                                </ImageView>
                                <TextView
                                    android:id="@+id/text_why"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="왜"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/pretendardregular"
                                    android:textColor="@color/gray_100"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="4dp">
                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/cardnews_background"
                                android:layout_marginTop="10dp">
                                <TextView
                                    android:id="@+id/why"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="코로나19 선별진료소 운영이 2023년 12월 31일 종료되어 운영 종료 시간에 의료진이 퇴근 준비 어쩌구"
                                    android:textSize="12dp"
                                    android:textColor="@color/gray_100"
                                    android:fontFamily="@font/pretendardregular"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginRight="12dp">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_500"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/test_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="46dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pretendardregular"
            android:text="기사 본문"
            android:textColor="@color/gray_100"
            android:textSize="14dp" />
    </LinearLayout>
</ScrollView>