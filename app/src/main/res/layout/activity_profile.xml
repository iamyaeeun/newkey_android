<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/black"
    android:backgroundTint="@color/gray_600">

    <LinearLayout
        android:id="@+id/back_from_history"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="회원 가입"
            android:textColor="@color/gray_100"
            android:textSize="24dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="76dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="사용하실 \n프로필을 선택해 주세요"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_from_history" />



    <Button
        android:id="@+id/completeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="39dp"
        android:backgroundTint="@color/key_green_400"
        android:text="완료"
        android:textColor="@color/gray_600"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/radius_100"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/profile_yellow"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_15"
                app:srcCompat="@drawable/profile_yellow"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                />


            <ImageButton
                android:id="@+id/profile_green"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_corner_15"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/profile_green" />
        </TableRow>

        <TableRow android:layout_width="wrap_content">

            <ImageButton
                android:id="@+id/profile_blue"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_15"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/profile_blue" />

            <ImageButton
                android:id="@+id/profile_newkey"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_corner_15"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/profile_newkey" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>