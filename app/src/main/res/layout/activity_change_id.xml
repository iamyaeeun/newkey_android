<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_600"
    tools:context=".NicknameActivity">

    <!-- 상단 LinearLayout -->
    <LinearLayout
        android:id="@+id/backFromProfile"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="5dp"
            android:text="별명 설정"
            android:textColor="@color/gray_100"
            android:textSize="24dp" />
    </LinearLayout>

    <!-- 별명 설정 안내 텍스트 -->
    <TextView
        android:id="@+id/nicknameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="사용하실 \n별명을 입력해 주세요"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/backFromProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 별명 텍스트 -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:text="별명"
        android:textColor="@color/gray_100"
        android:textSize="14dp"
        android:fontFamily="@font/pretendardmedium"
        app:layout_constraintTop_toBottomOf="@+id/nicknameTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 별명 입력 필드 -->
    <EditText
        android:id="@+id/editUserId"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/radius_8"
        android:backgroundTint="@color/gray_400"
        android:paddingStart="12dp"
        android:textColor="@color/gray_100"
        android:fontFamily="@font/pretendardregular"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 별명 글자수 표시 -->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:text="0/10"
        android:textColor="@color/gray_100"
        android:textSize="14dp"
        android:fontFamily="@font/pretendardregular"
        app:layout_constraintTop_toTopOf="@+id/editUserId"
        app:layout_constraintBottom_toBottomOf="@+id/editUserId"
        app:layout_constraintEnd_toEndOf="@+id/editUserId" />

    <!-- 완료 버튼 -->
    <Button
        android:id="@+id/completeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="39dp"
        android:backgroundTint="@color/gray_400"
        android:text="완료"
        android:textColor="@color/gray_100"
        android:textSize="18dp"
        android:background="@drawable/radius_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
