<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_600">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/news1_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="112dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="123dp"
                            android:layout_height="33dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="44dp"
                            android:src="@drawable/main_activity_logo1"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="36dp"
                            android:layout_marginBottom="36dp"
                            android:layout_marginStart="157dp"
                            android:layout_marginEnd="20dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/search"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="13dp"
                                android:src="@drawable/search"/>
                            <ImageView
                                android:id="@+id/notification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/notification"/>
                        </LinearLayout>
                    </LinearLayout>
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@color/gray_600"
                        android:elevation="1dp"
                        app:tabGravity="fill"
                        app:tabMode="scrollable"
                        app:tabTextColor="@color/grao_100_30"
                        app:tabSelectedTextColor="@color/gray_100"
                        app:tabIndicatorColor="@color/gray_100"
                        app:tabTextAppearance="@style/news1_tab_font">
                        <com.google.android.material.tabs.TabItem
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="정치"/>
                        <com.google.android.material.tabs.TabItem
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="경제"/>
                        <com.google.android.material.tabs.TabItem
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="사회"/>
                        <com.google.android.material.tabs.TabItem
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="생활"/>
                        <com.google.android.material.tabs.TabItem
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="세계"/>
                        <com.google.android.material.tabs.TabItem
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="IT"/>
                        <com.google.android.material.tabs.TabItem
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="오피니언"/>
                        <com.google.android.material.tabs.TabItem
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="스포츠"/>
                    </com.google.android.material.tabs.TabLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="184dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/news1_radius">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="17dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HOT 뉴스"
                                android:textColor="@color/white"
                                android:layout_marginStart="16dp"
                                android:fontFamily="@font/pretendardmedium"
                                android:textSize="16dp"/>
                            <TextView
                                android:id="@+id/news1_information1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/gray_100"
                                android:text="더보기"
                                android:layout_marginStart="240dp"
                                android:layout_marginRight="4dp"
                                android:fontFamily="@font/pretendardregular"
                                android:textSize="10dp"/>
                            <ImageView
                                android:id="@+id/news1_information2"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/information"
                                android:layout_marginRight="18dp"/>
                        </LinearLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="11dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constrainedHeight="true">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/news1_hot_recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <androidx.viewpager2.widget.ViewPager2
                                android:id="@+id/viewPagerHotNews"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </androidx.viewpager2.widget.ViewPager2>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="11dp"
                        android:background="@color/gray_500_40_100" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/news1_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPagerNews"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_activity_linearlayout2_imageview1"
            android:layout_width="188dp"
            android:layout_height="52dp"
            android:layout_marginBottom="27dp"
            android:background="@drawable/navigationbar_rounded_rectangle_background"
            android:orientation="horizontal"
            android:layout_gravity="center|bottom">
            <ImageView
                android:id="@+id/button_home"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:background="@drawable/icon_circle_background"
                android:padding="10dp"
                android:src="@drawable/home"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/button_feed"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_circle_background"
                android:padding="10dp"
                android:src="@drawable/feed_green"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/button_person"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:background="@drawable/icon_circle_background"
                android:padding="10dp"
                android:src="@drawable/person"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>