<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="124dp"
    android:layout_height="163dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:layout_marginRight="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/newkey_black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_000_40">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/news_press"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="뉴키일보"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendardextralight"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/news_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="0시간 전"
            android:textSize="8dp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendardextralight"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_bookmark"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/bookmark_unchecked"
        android:layout_gravity="right|top"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp">
    </ImageView>

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="제목"
        android:textSize="14dp"
        android:layout_gravity="bottom"
        android:textColor="@color/gray_100"
        android:fontFamily="@font/pretendardmedium"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:maxLines="4">
    </TextView>

</androidx.cardview.widget.CardView>