<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="@color/black">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="325dp"
        android:layout_height="81dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/back" />
        <TextView
            android:id="@+id/mypageText"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="마이페이지"
            android:textColor="@color/gray_100"
            android:textSize="24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="325dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="311dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_corner_15"
        android:backgroundTint="@color/gray_500"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_history"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"/>

        <ImageView
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/line" />

        <Button
            android:id="@+id/btn_scrap"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"/>

        <ImageView
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/line" />

        <Button
            android:id="@+id/btn_topic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <TextView
        android:id="@+id/changePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="1dp"
        android:text="비밀번호 변경"
        android:textColor="@color/gray_300"/>

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:text="로그아웃"
        android:textColor="@color/gray_300"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="356dp"
        android:textSize='13dp'
        android:text="최근 본 기사"
        android:textColor="@color/gray_100" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="167dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="167dp"
        android:text="스크랩 한 기사"
        android:textColor="@color/gray_100"
        android:textSize='13dp' />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="51dp"
        android:layout_marginBottom="51dp"
        android:text="관심사 설정"
        android:layout_marginEnd="51dp"
        android:layout_marginTop="356dp"
        android:textColor="@color/gray_100"
        android:textSize='13dp' />

    <ImageView
        android:id="@+id/changeProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="237dp"
        android:layout_marginTop="220dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp"
        android:src="@drawable/change_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="336dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/viewHistory"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="72dp"
            android:src="@drawable/history" />

        <ImageView
            android:id="@+id/viewScrap"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:backgroundTint="@color/gray_500"
            android:layout_marginStart="103dp"
            android:src="@drawable/bookmark" />

        <ImageView
            android:id="@+id/chooseTopics"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:backgroundTint="@color/gray_500"
            android:layout_marginStart="105dp"
            android:src="@drawable/category" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profileImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_corner_40"
            android:src="@drawable/profile_yellow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/profileId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:backgroundTint="@color/black"
                android:text="뉴키123"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/changeProfileId"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/edit" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
