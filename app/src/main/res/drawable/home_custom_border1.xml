<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그라데이션 배경 레이어 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#70FDFF"
                android:startColor="#C5FFCD" />
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <!-- 투명한 중앙 부분으로 테두리 효과를 내는 레이어 -->
    <item android:left="0.6dp" android:top="0.6dp" android:right="0.6dp" android:bottom="0.6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_500_40_100"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>